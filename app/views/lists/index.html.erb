<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @lists.last.photo.key%>');">
  <div class="container">
    <h1 class="text-center fw-bold">All Lists</h1>
  </div>
</div>

<div class="container">
<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-end">
  <%= link_to '+ New List', new_list_path, class:"btn btn-primary justify-end" %>
</div>
  <div class="row mt-5">
    <% @lists.each do |list| %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=  %>')">
          <%= link_to list.name, list %>
          <%= link_to "+", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-remove-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
